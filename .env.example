# Binance API Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Binance Testnet Credentials (for development/testing)
BINANCE_TESTNET_KEY=your-testnet-api-key-here
BINANCE_TESTNET_SECRET=your-testnet-api-secret-here

# Binance Mainnet Credentials (for live trading - KEEP SECURE!)
BINANCE_MAINNET_KEY=your-mainnet-api-key-here
BINANCE_MAINNET_SECRET=your-mainnet-api-secret-here

# Trading Configuration
TRADING_BinanceApi__UseTestnet=true
TRADING_RiskManagement__RiskPerTradePercent=1.5
TRADING_RiskManagement__MaxDrawdownPercent=20
TRADING_RiskManagement__MaxDailyDrawdownPercent=3

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Logging Level
LOGGING_LEVEL=Information
