# ------------------------------------------
# Telegram Notification Bot (Optional)
# ------------------------------------------
# Create bot via @BotFather to get token
# Get chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# ------------------------------------------
# Binance Futures API
# ------------------------------------------
# Testnet: Get keys from https://testnet.binance.vision/
# Mainnet: Get keys from https://www.binance.com/en/my/settings/api-management

# Binance API credentials used by SignalBot configuration
# Use testnet keys when TRADING_BinanceApi__UseTestnet=true
# Use mainnet keys when TRADING_BinanceApi__UseTestnet=false
TRADING_BinanceApi__ApiKey=your_api_key
TRADING_BinanceApi__ApiSecret=your_api_secret

# Toggle between testnet and mainnet
# true = testnet (fake money), false = mainnet (real money)
TRADING_BinanceApi__UseTestnet=true

# ------------------------------------------
# Bitget Futures API
# ------------------------------------------
# Demo keys: create in Bitget Demo Trading mode
TRADING_SignalBot__Exchange__Bitget__UseTestnet=true
TRADING_SignalBot__Exchange__Bitget__ApiKey=your_bitget_api_key
TRADING_SignalBot__Exchange__Bitget__ApiSecret=your_bitget_api_secret
TRADING_SignalBot__Exchange__Bitget__ApiPassphrase=your_bitget_api_passphrase

# ------------------------------------------
# SignalBot Futures Trading (Optional)
# ------------------------------------------
# Enable/disable Futures trading
# true = trading enabled (default)
# false = monitoring-only mode (receives signals but doesn't trade)
# Useful when API credentials have permission issues
TRADING_SignalBot__EnableFuturesTrading=true

# ------------------------------------------
# Important Notes
# ------------------------------------------
# 1. Keep this file secret and never share it
# 2. Start with testnet (UseTestnet=true) before going live
# 3. Test thoroughly on testnet before using mainnet keys
# 4. Enable IP restrictions for API keys on Binance
# 5. Use separate keys for testnet and mainnet
# 6. If Futures API fails, set EnableFuturesTrading=false for monitoring-only mode
